# Start from a slim Python image
FROM python:3.9-slim

# Install dependencies for Google Chrome and other necessary libraries
RUN apt-get update && apt-get install -y \
    wget \
    curl \
    unzip \
    libx11-dev \
    libxcomposite1 \
    libxrandr2 \
    libxdamage1 \
    libxi6 \
    libgconf-2-4 \
    libnss3 \
    libasound2 \
    libgtk-3-0 \
    libappindicator3-1 \
    libgdk-pixbuf2.0-0 \
    libnspr4 \
    libxtst6 \
    libdbus-1-3 \
    xdg-utils \
    libnss3-dev \
    libxss1 \
    && rm -rf /var/lib/apt/lists/*

# Install Google Chrome
RUN wget -q -O - https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb > google-chrome-stable_current_amd64.deb && \
    dpkg -i google-chrome-stable_current_amd64.deb && \
    apt-get update -y && apt-get install -f

# Install dependencies listed in requirements.txt
WORKDIR /app
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install additional packages for selenium and webdriver-manager
RUN pip install --no-cache-dir selenium webdriver-manager

# Set up the working directory
COPY . .

# Expose the port for Flask to run on (default is 5000)
EXPOSE 5000

# Set the command to run the app (using gunicorn in production)
CMD ["gunicorn", "--bind", "0.0.0.0:5000", "app:app"]
